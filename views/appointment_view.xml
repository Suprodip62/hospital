<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'done' "
                    decoration-info="state == 'draft' "
                    decoration-danger="state == 'cancel' "
                    decoration-warning="state == 'in_consultant' ">
                <field name='patient_id'/>
                <field name='appointment_date'/>
                <field name='booking_date'/>
                <field name='activity_ids' widget='list_activity'/>
                <field name='state' widget='badge' decoration-success="state == 'done' "
                                                    decoration-info="state == 'draft' "
                                                    decoration-danger="state == 'cancel' "
                                                    decoration-warning="state == 'in_consultant' "
                />
                <field name="context"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" nolabel="1" options="{'clickable' : '1'}" />
                </header>
                <sheet>
                    <div>
                        <h2>
                            <field name="priority" widget="priority"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name='patient_id'/>
                            <field name='gender'/>
                            <field name='age' readonly="false"/>
                            <field name='appointment_date'/>
                            <field name='booking_date'/>
                            <button name='object_test' string='Object Button' type='object' class='oe_highlight' context="{'name': 'Mamun'}" />
                            <button name='object_test' string='Object Button1' type='object' class='oe_highlight' context="{'name': 'Mamun111'}" />
                            <button name='object_test' string='Object Button2' type='object' class='oe_highlight' context="{'name': 'Mamun2222'}" />
                            <button name='%(action_hospital_appointment)d' string='Action Button' type='action' class='oe_highlight' confirm='Are you sure Open Patient Action'></button>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription" name="prescription">
                            <group>
                                <field name="gender"/>
                                <field name="prescription"/>
                            </group>
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <group>
                                <field name='appointment_date'/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
                
            </search>
        </field>
    </record>


    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <!-- <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field> -->
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a patient details
            </p>
        </field>
    </record>


    <menuitem id="appointment_menu_hospital" name="Appointment" action="action_hospital_appointment" parent="menu_hospital_appointment" sequence="3"/>

</odoo>
